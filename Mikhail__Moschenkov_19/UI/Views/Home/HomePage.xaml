<UserControl x:Class="BankSystemApp.UI.Views.Home.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BankSystemApp.UI.Views.Home"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:HomePageViewModel/>
    </UserControl.DataContext>
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10" TextWrapping="Wrap" FontSize="16"
                   Text="{Binding connection.ConnectionInfo}" VerticalAlignment="Top" Foreground="{Binding dMod.brushForeground}"/>
    </Grid>
</UserControl>
