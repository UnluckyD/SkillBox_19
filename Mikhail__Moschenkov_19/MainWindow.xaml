<Window x:Class="BankSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankSystem" d:DataContext="{d:DesignInstance Type=local:ViewModelClass}"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        mc:Ignorable="d"
        Title="BankSystem" Height="450" Width="800">
    <Window.DataContext>
        <local:ViewModelClass x:Name="VM"/>
    </Window.DataContext>

    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="671*"/>
            <ColumnDefinition Width="112*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition Height="328*"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Black" BorderThickness="1" Margin="1.383,10,10,10" Grid.ColumnSpan="2" Grid.Column="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="61*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="tb_ConnectionStr" Grid.ColumnSpan="1" Margin="5,5,5,5" Text="{Binding StrConnection}"/>
                <Button x:Name="btn_connect" Margin="5,5,5,5" Grid.Column="1" Content="Connect" Command="{Binding btn_connect}" IsEnabled="True"/>
            </Grid>
        </Border>
        <DataGrid x:Name="dg_list" Margin="1.383,10,10,10" Grid.Row="1" AutoGenerateColumns="False"
                  Grid.ColumnSpan="2" 
                  ItemsSource="{Binding model.Clients}"
                  SelectedItem="{Binding Client}" Grid.Column="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding lastName}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding firstName}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Очество" Binding="{Binding middleName}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Серия/номер парспорта" Binding="{Binding pasport}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Номер счёта" Binding="{Binding Id}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Счёт" Binding="{Binding account}" IsReadOnly="True"/>
                <DataGridCheckBoxColumn Header="VIP" Binding="{Binding isVip}" IsReadOnly="False"/>
                <DataGridCheckBoxColumn Header="Юр.Лицо" Binding="{Binding isLegal}" IsReadOnly="False"/>
                <DataGridCheckBoxColumn Header="Блок" Binding="{Binding isBanned}" IsReadOnly="False"/>
            </DataGrid.Columns>
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Добавить" Command="{Binding Add_window}"/>
                    <MenuItem Header="Изменить" Command="{Binding Edit_window}"/>
                    <MenuItem Header="Удалить" Command="{Binding Delete_Client}"/>
                    <MenuItem Header="Перевод" Command="{Binding Transfer_window}"/>
                    <MenuItem Header="Кредит" Command="{Binding Credit_window}"/>
                    <MenuItem Header="Вклад" Command="{Binding Contribution_window}"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
        <TextBlock HorizontalAlignment="Left" Margin="10" TextWrapping="Wrap" Text="SkillBox" VerticalAlignment="Top" FontSize="26" Foreground="Gray" FontWeight="Bold"/>
        
        <Button Grid.Row="1" Margin="10,10,0,0" Height="35" VerticalAlignment="Top" Width="100" HorizontalAlignment="Left" Background="{x:Null}" BorderBrush="{x:Null}">
            <StackPanel HorizontalAlignment="Left" Margin="0" Width="100" Orientation="Horizontal">
                <fa:IconBlock Margin="1,2,0,0" Width="30" Padding="3" Icon="Home" FontSize="18" Foreground="DarkGray" HorizontalAlignment="Left"/>
                <TextBlock Margin="0,10,0,0" Height="32" Text="Home" HorizontalAlignment="Left" Width="42" VerticalAlignment="Top"/>
            </StackPanel>
        </Button>
        
        <Button Grid.Row="1" Margin="10,55,0,0" Height="35" VerticalAlignment="Top" Width="100" HorizontalAlignment="Left" Background="{x:Null}" BorderBrush="{x:Null}">
            <StackPanel HorizontalAlignment="Left" Margin="0" Width="100" Orientation="Horizontal">
                <fa:IconBlock Margin="1,2,0,0" Width="30" Padding="3" Icon="Users" FontSize="18" Foreground="DarkGray" HorizontalAlignment="Left"/>
                <TextBlock Margin="0,10,0,0" Height="32" Text="Клиенты" HorizontalAlignment="Left" Width="50" VerticalAlignment="Top"/>
            </StackPanel>
        </Button>

        <Button Grid.Row="1" Margin="10,100,0,0" Height="35" VerticalAlignment="Top" Width="100" HorizontalAlignment="Left" Background="{x:Null}" BorderBrush="{x:Null}">
            <StackPanel HorizontalAlignment="Left" Margin="0" Width="100" Orientation="Horizontal">
                <fa:IconBlock Margin="1,2,0,0" Width="30" Padding="3" Icon="DollarSign" FontSize="18" Foreground="DarkGray" HorizontalAlignment="Left"/>
                <TextBlock Margin="0,10,0,0" Height="32" Text="Счёт" HorizontalAlignment="Left" Width="42" VerticalAlignment="Top"/>
            </StackPanel>
        </Button>

        <Button Grid.Row="1" Margin="10,145,0,0" Height="35" VerticalAlignment="Top" Width="100" HorizontalAlignment="Left" Background="{x:Null}" BorderBrush="{x:Null}">
            <StackPanel HorizontalAlignment="Left" Margin="0" Width="100" Orientation="Horizontal">
                <fa:IconBlock Margin="1,2,0,0" Width="30" Padding="3" Icon="University" FontSize="18" Foreground="DarkGray" HorizontalAlignment="Left"/>
                <TextBlock Margin="0,10,0,0" Height="32" Text="Кредит" HorizontalAlignment="Left" Width="42" VerticalAlignment="Top"/>
            </StackPanel>
        </Button>

        <Button Grid.Row="1" Margin="10,190,0,0" Height="35" VerticalAlignment="Top" Width="100" HorizontalAlignment="Left" Background="{x:Null}" BorderBrush="{x:Null}">
            <StackPanel HorizontalAlignment="Left" Margin="0" Width="100" Orientation="Horizontal">
                <fa:IconBlock Margin="1,2,0,0" Width="30" Padding="3" Icon="PiggyBank" FontSize="18" Foreground="DarkGray" HorizontalAlignment="Left"/>
                <TextBlock Margin="0,10,0,0" Height="32" Text="Вклад" HorizontalAlignment="Left" Width="42" VerticalAlignment="Top"/>
            </StackPanel>
        </Button>
        
        <Button Grid.Row="1" Margin="10,235,0,0" Height="35" VerticalAlignment="Top" Width="100" HorizontalAlignment="Left" Background="{x:Null}" BorderBrush="{x:Null}">
            <StackPanel HorizontalAlignment="Left" Margin="0" Width="100" Orientation="Horizontal">
                <fa:IconBlock Margin="1,2,0,0" Width="30" Padding="3" Icon="Sun" FontSize="18" Foreground="DarkGray" HorizontalAlignment="Left"/>
                <TextBlock Margin="0,10,0,0" Height="32" Text="Настройки" HorizontalAlignment="Left" Width="60" VerticalAlignment="Top"/>
            </StackPanel>
        </Button>

        <Button Grid.Row="1" Margin="10,0,0,10" Height="35" VerticalAlignment="Bottom" Width="100" HorizontalAlignment="Left" Background="{x:Null}" BorderBrush="{x:Null}" Command="{Binding GitHub_btn_click}">
            <StackPanel HorizontalAlignment="Left" Margin="0" Width="100" Orientation="Horizontal">
                <fa:IconBlock Margin="1,2,0,0" Width="30" Padding="3" Icon="Github" FontSize="18" Foreground="DarkGray" HorizontalAlignment="Left"/>
                <TextBlock Margin="0,10,0,0" Height="32" Text="GitHub" HorizontalAlignment="Left" Width="60" VerticalAlignment="Top"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>
